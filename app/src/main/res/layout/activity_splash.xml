<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rado.piero.cachuelitos.SplashActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_fondo_cachuelo"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_negrotransp"
        android:gravity="center"
        >

            <ImageView
                android:layout_width="@dimen/main_logo_width"
                android:layout_height="@dimen/main_logo_height"
                android:src="@drawable/bg_logo_cachuelito_vertical" />


    </LinearLayout>


</RelativeLayout>
